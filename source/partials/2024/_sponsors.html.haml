%section.content.sponsors#sponsors
  %h2.heading Sponsors
  %ul.sponsors__list
    - data.year_2024.sponsors.each do |sponsor|
      %li.sponsors__logo
        = link_to sponsor.url,
          title: sponsor.name_ja,
          target: '_blank' do
          = image_tag("2024/sponsors/#{sponsor.logo}",
            class: "sponsors__logo-image is-#{sponsor.name}")
